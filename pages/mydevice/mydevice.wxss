/* pages/mydevice/mydevice.wxss */
@import "../tabbar/tabbar.wxss";


/* pages/self/self.wxss */
page{
  height: 100%;
  background: #F5F5F5;
}

.device {
  padding: 25rpx 40rpx;
  background: #fff;
  border-width: 0px 0px 1px 0px;
  border-style: solid;
  border-color: #F5F5F5;
  display: flex;
  align-items: center;

}
/* 共享view里面的text样式*/
.deviceTextStyle {
  color: #4a4a4a;
  font-size: 15px;
  line-height: 1.42857;
  flex: 1;
}
/* 共享右箭头设置*/
.righthead:after{

  content: '';
  /*即不把兄弟挤下去 又能设置自己的style  inline不能设置大小 block会挤下去 所以有了inline-block*/
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border: 3rpx solid #A3A3A3;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-top: -8rpx;

}

.deviceno{
  color: #A3A3A3;
}


