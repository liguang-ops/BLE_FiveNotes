/* pages/detailedPatient/detailedPatient.wxss */
.container {
  padding: 30rpx;
  align-items: left;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.character{
  padding-left:10px;
  display: flex;
  flex-direction: column;
  justify-content: center;

}

.list-msg {
    background-color: #fff;
   
    display: flex;
    flex-direction: row;
    margin-top: 5px;
}
 
.list-msg .list-msg2 {
    height: 20px;
    width: 40%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border: 1px solid #ccc;
    padding: 0 10rpx;
    margin-left: 10px
}
 
.select_box {
    background-color: #F5F5F5;
    padding: 0 10rpx;
    width: 40%;
    position: flex;
    top: 130rpx;
    z-index: 1;
    overflow: hidden;
    animation: myfirst 0.5s;
}
 
@keyframes myfirst {
    from {
        height: 0rpx;
    }
 
    to {
        height: 210rpx;
    }
}
 
.select_one {
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}

.record{
  display: flex;
  flex-direction: column;
  align-items: center;

}

.subrecord{
  margin-top: 20px
}
.record-label{
  font-size: 16px;
  font-weight: bold
}

.record-text{
  border:1px solid #66CCFF;
  border-radius: 5px;
  font-size:15px;
  margin-top: 5px;
}

.btnConfirm{
  width: 200px;
  font-size: 14px;
  border-radius: 5px;
  color: white;
  background-color: #66CCFF;
  margin: 30px
}